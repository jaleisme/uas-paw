<%- include('template/header',{page: "add"}) %>
<div class="row mt-2">
    <div class="col-12">
        <h1><%= title %></h1>
    </div>
</div>
<div class="row mt-3">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <form action="/store" method="post" enctype="multipart/form-data">
                    <label for="assignedID" class="form-label">Assigned ID</label>
                    <input type="text" class="form-control" id="assignedID" name="assignedID" <% if(id != ''){ %> value="<%= id %>" <% } %> placeholder="E.g. 'OP' or 'BH' (Two identity words of the movie title)"/>
                    
                    <label for="title" class="form-label mt-3">Title</label>
                    <input type="text" class="form-control" id="title" name="title" placeholder="E.g. One Piece"/>
                    
                    <label for="author" class="form-label mt-3">Author</label>
                    <input type="text" class="form-control" id="author" name="author" placeholder="E.g. Eichiro Oda"/>

                    <div class="mt-3 d-flex justify-content-between">
                        <a href="/datas" class="btn btn-secondary">Back</a>
                        <button class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include('template/footer',{page: "add"}) %>
